# FitTracker Environment Configuration
# Copy this file to .env.local and update with your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=FitTracker
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-project-id.supabase.co/rest/v1

# Testing Configuration
VITE_TEST_MODE=true
TEST_USER_EMAIL=john.doe@fittracker.com
TEST_USER_PASSWORD=User123!
TEST_ADMIN_EMAIL=admin@fittracker.com
TEST_ADMIN_PASSWORD=Admin123!

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development Tools
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Mobile Testing (for Appium)
APPIUM_SERVER_URL=http://localhost:4723/wd/hub
ANDROID_APP_PATH=/path/to/fittracker.apk
IOS_APP_PATH=/path/to/fittracker.app

# Performance Testing
PERFORMANCE_TEST_DURATION_SECONDS=300
MAX_CONCURRENT_USERS=100

# Security
JWT_SECRET=your_jwt_secret_key_for_testing
API_RATE_LIMIT=1000